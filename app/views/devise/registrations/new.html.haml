.AccountPage
  .AccountPage__title
    %h2 Create Account
    %h5 新規アカウントの作成
  .AccountPage__form
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = devise_error_messages!
      .FormField
        .FormField__label--nomal
          = f.label :"ニックネーム(8文字以内)"
        .FormField__input--nomal
          = f.text_field :nickname, autofocus: true, maxlength: "8"
      .FormField
        .FormField__label--nomal
          = f.label :"メールアドレス"
        .FormField__input--nomal
          = f.email_field :email
      .FormField
        .FormField__label--normal
          = f.label :"パスワード"
          %i (英数字8文字以上)
        .FormField__input--normal
          = f.password_field :password, autocomplete: "off"
      .FormField
        .FormField__label--normal
          = f.label :"パスワード(確認用)"
        .FormField__input--normal
          = f.password_field :password_confimation, autocomplete: "off"
      .actions
        = f.submit "登録する", class: 'Button UserButton'
      