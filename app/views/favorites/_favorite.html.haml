- if user_favorite.exists?
  .Like__list--on
    = link_to tweet_favorite_path(tweet.id, user_favorite.ids), method: :delete, remote: true do
      = icon('fa', 'star')
      お気に入り
      = favorites.count
- else
  .Like__list
    = link_to tweet_favorites_path(tweet.id), method: :post, remote: true do
      = icon('fa', 'star')
      お気に入り
      = favorites.count 